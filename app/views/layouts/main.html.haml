!!!

%html
  %head
    - title = "UPLO #{yield(:title)} | #{I18n.t("common.site_title")}"
    %title= title
    %meta{ :charset => "utf-8" }
    %meta{:name => "title", :content => title}

    %link(href="#{path_to_image('/favicon.ico')}" type="image/x-icon" rel="shortcut icon")/
    %link(href="#{path_to_image('/favicon.ico')}" type="image/x-icon" rel="icon")/

    = stylesheet_link_tag 'jquery.ui.theme.css', 'jquery.ui.selectmenu.css', 'scss/application.css', 'scss/dialog.css'
    = jquery_include_tag
    = javascript_include_tag 'rails.js', 'application.js', 'lib/jquery.ui.widget.js', 'lib/jquery.ui.position.js', 'lib/jquery.ui.selectmenu.js', 'lib/jquery.simplemodal.js'
    = javascript_include_tag("app/gallery.js", 'lib/jquery.inputHintOverlay.js')
    = csrf_meta_tag
    = yield :head
    = render(partial: "google/analytics")

  %body
    #header
      .wrapper
        %a.left#logo{:href => "/"}
          = image_tag("uplo_logo.png", {:alt => "UPLO"})
        .left.font12{:style => "color:#ed3b03;font-weight:bold;padding-left:5px"}
          Beta
        #user-box.header-menu.text.line24.right
          = render(:partial => "new_user_menu")

        .devider.right
          = image_tag("/assets/divider.jpg")

        %nav#menu.header-menu.text.line24.right
          = render(:partial => "public_menu")
    #banner
      = yield :banner
    .clear

    .wrapper
      #top.clearfix
        #main.clearfix
        = yield :top_content

      = render :partial => "notification_box"

      #left.panel.left
        = yield :left_content

      #center.panel
        = yield

      #right.panel.right
        = yield :right_content

      #bottom.panel
        .line-separator
        .text.light-gray.font11.line18
          Copyright &copy; 2012 UPLO. All rights reserved
        .text.black.font11.line18.center
          = link_to "Payment Policy", "/payment", :style => "font-weight:normal"
          = "/"
          = link_to "Terms of Service", "/terms", :style => "font-weight:normal"
        #mask.hide
          = image_tag('loading.gif')

    = yield :js
    = javascript_tag do
      $('body').delegate('.popup .close', 'click', function(e){ $.modal.close() });
      $('body').delegate('.bubble .close', 'click', function(e){ $.modal.close() });
      $('select[id!=my_links]').selectmenu({style:'dropdown'});
      $('#my_links').selectmenu({ style: 'dropdown', select: function(e, obj){ window.location = obj.value; }});
      - if (@auto_hide_notification)
        helper.auto_hide_flash_message();
