!!!

%html
  %head
    - title = "UPLO #{yield(:title)} | #{I18n.t("common.site_title")}"
    %title= title
    %meta{ :charset => "utf-8" }
    %meta{:name => "title", :content => title}

    %link(href="#{path_to_image('/favicon.ico')}" type="image/x-icon" rel="shortcut icon")/
    %link(href="#{path_to_image('/favicon.ico')}" type="image/x-icon" rel="icon")/

    = stylesheet_link_tag "scss/application.css", "scss/dialog.css"
    = jquery_include_tag
    = javascript_include_tag("rails.js", "application.js", "app/popup.js")
    = csrf_meta_tag
    = yield :head
    :erb
      <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-30729550-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>

  %body
    #header
      .wrapper
        %a#logo{:href => "/"}
          = image_tag("uplo_logo.png", {:alt => "UPLO"})

        #user-box.header-menu.right
          = render(:partial => "shared/new_user_menu")

        .devider.right
          = image_tag("/assets/divider.jpg")

        %nav#menu.header-menu.right
          = render(:partial => "shared/public_menu")

    #banner
      = yield :banner
    .clear

    .wrapper
      #top.panel
        = yield :top_content
      #left.panel
        = yield :left_content

      #center.panel
        #main.clearfix
        - flash_class = (flash.blank? ? "" : "content")
        #flash{:class => flash_class}
          - flash.each do |key, value|
            .box{:class => "box-#{key}"}= value

        = yield

      #right.panel
        = yield :right_content

      #bottom.panel
        .line-separator &nbsp;
        .fuzzy Copyright &copy; 2012 UPLO. All rights reserved
        #build-version{:style => "text-align: center; font-size: 12px"}= "Build 8: 2012-03-27"

    = yield :js


