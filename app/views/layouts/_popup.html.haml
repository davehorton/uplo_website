/ local value: popup_class, icon_class, title, id
- id = '' if id.nil?
- title = '' if title.nil?
- icon_class = '' if icon_class.nil?
- popup_class = '' if popup_class.nil?
.popup.left.hide{ :id => "#{ id }", :class => "#{ popup_class }" }
  .header.left
    .left{ :class => "#{ icon_class }" }
    .title.text.black.bold.font12.left= title
    %a.close.right
      .right &times;
  .container.left
    .main-panel.left
      = yield
