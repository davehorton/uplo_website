!!!

%html
  %head
    - title = "UPLO #{yield(:title)} | #{I18n.t("common.site_title")}"
    %title= title
    %meta{ :charset => "utf-8" }
    %meta{:name => "title", :content => title}
    
    %link(href="#{path_to_image('/favicon.ico')}" type="image/x-icon" rel="shortcut icon")/
    %link(href="#{path_to_image('/favicon.ico')}" type="image/x-icon" rel="icon")/
    
    = stylesheet_link_tag "style.css"
    = jquery_include_tag
    = javascript_include_tag("rails.js", "application.js")
    = csrf_meta_tag
    = yield :head

  %body
    #header.round-box
      #logo-wrapper
        %a#logo{:href => "/"}
          = "UPLO"
        #search-box-wrapper
          =# render(:partial => "shared/search_box")
        #user-box
          = render(:partial => "shared/user_info")

      %nav#menu
        =# render(:partial => "shared/main_menu")

    #wrapper
      #main.clearfix
        - flash_class = (flash.blank? ? "" : "content")
        #flash{:class => flash_class}
          - flash.each do |key, value|
            .box{:class => "box-#{key}"}= value
          
        .content-wrapper.clearfix
          = yield
        
        #contact-panel
          =# render(:partial => "shared/contact_panel")

    #footer.round-box
      =# render(:partial => "shared/footer")

:erb
  <script type="text/javascript">
    $(document).ready(function(){
      helper.hide_require_signs();
    });
  </script>
