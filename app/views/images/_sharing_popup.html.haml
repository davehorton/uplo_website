#social-sharing.hide
  .main.left
    %a.close{:href=>'#'}
      .right{:onclick => "$('#social-sharing').hasClass('hide'); return false;"} &times;
    .container.left
      .text.black.bold.font14.line12.left Share this via:
      .line-separator.left
      .buttons-container.right
        - public_url = url_for(:controller => 'images', :action => 'public', :id => params[:id], :only_path => false)
        - flickr_request = url_for(:controller => 'images', :action => 'post_image_to_flickr', :id => params[:id], :only_path => false)
        - if !(@user.tumblr_token.blank?)
          %a.tumblr.button.right{ :href => '#', :onclick => "showSocialPopup('tumblr');"}
        - if !(@user.flickr_token.blank?)
          %a.flickr.button.right{ :href => '#', :onclick => "showSocialPopup('flickr');"}
        - if !(@user.twitter_token.blank?)
          %a.twitter.button.right{ :href => '#', :onclick => "showSocialPopup('twitter');"}
        - if !(@user.facebook_token.blank?)
          %a.facebook.button.right{ :href => '#', :onclick => "showSocialPopup('facebook');"}
          
        %a.email.button.right{ :href => '#', :onclick => 'showEmailPopup();' }
        /%a.flickr.button.left{ :href => "#{flickr_request}", :title => "Share on Flickr", :target => "_blank" }
        /%a.pinterest.button.left.no-padding-right{ :href => image_pinterest_share_url(@image, public_url), :target=>"_blank", :title => "Share on Pinterest" }

  .tail.left
    .icon.right
