$('#preview-image').html("<%= j image_tag(@preview_url) %>");
$('#preview-waiting').hide();

var selectedProduct = $('#line_item_product_id').find(':selected').text().toLowerCase();
if(selectedProduct.indexOf('canvas')>-1){
  $('#preview-image').append('<br><br>Preview:<br><img alt="Canvas" src="' + $('#preview-image').children("img").attr("src") + '" style="width: 200px">');
} else if(selectedProduct.indexOf('plexi')>-1){
  $('#preview-image').append('<br><br>Preview:<br><img alt="Plexi" src="' + $('#preview-image').children("img").attr("src") + '" style="width: 200px">');
}