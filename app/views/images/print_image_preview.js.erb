$('#preview-image').html("<%= j image_tag(@preview_url) %>");
$('#preview-waiting').hide();

var selectedProduct = $('#line_item_product_id').find(':selected').text().toLowerCase();
if(selectedProduct.indexOf('canvas')>-1){
  $('#preview-image').append("<br/><br/>Preview").append('<div id="canvas-preview"><img id="canvas-actual-image" alt="Canvas" src="' + $('#preview-image').children("img").attr("src") + '"></div>');
} else if(selectedProduct.indexOf('plexi')>-1){
  $('#preview-image').append("<br/><br/>Preview").append('<div id="plexi-preview"><img id="plexi-actual-image" alt="Plexi" src="' + $('#preview-image').children("img").attr("src") + '"></div>');
}