- content_for :body_class, 'images'

- content_for :top_content do
  .text.black.bold.font16{ :style => 'margin-bottom:8px;' }= @image.name

- content_for :right_content do
  - if @line_item.nil?
    - size = nil
    - moulding = nil
    - quantity = 1
  - else
    - size = @line_item.size
    - quantity = @line_item.quantity
    - size = @line_item.product.size_id
    - moulding = @line_item.product.moulding_id
  .right
    .text.black.bold.font18 Build Your Order
    .line-separator
    = simple_form_for(:line_item, :url => url_for(:controller => "shopping_cart", :action => "add_to_cart", :image_id => @image.id), :method => 'post', :html => { :id => 'order-details', :class => 'left' }) do |f|
      - [:crop_x, :crop_y, :crop_w, :crop_h].each do |attr|
        = f.hidden_field attr, id: attr

      .round-box.option.left.print-sizes-container
        .header.text.black.bold.font14= "Print Size"
        .item.left
          = f.select :size, options_from_collection_for_select(@sizes, :id, :to_name, size)
      .round-box.option.left{:style => 'width:138px;'}
        .header.text.black.bold.font14= "Moulding Choice"
        .item.left
          = f.select :moulding, options_from_collection_for_select(@mouldings, :id, :name, moulding)
      .round-box.option.right{:style => 'width:138px;'}
        .header.text.black.bold.font14= "Quantity"
        .item.left
          = f.text_field(:quantity, :value => quantity, :size => "2", :title => 'Limit from 1 to 10')
      .line-separator.left
      .summary.right
        #total.right
          .text.black.bold.left Subtotal:
          .number.text.black.bold.left= number_to_currency 0, {:precision => 2}
      .line-separator.left
      .button.add-to-cart.clear.right

.sections.clearfix
  .image-container-wrapper.clearfix
    #order-preview.image-container.medium.left
      #preview-frame.clearfix
        = image_tag(@image.url(:medium), :id => "preview-image", :class => 'image',
                  'data-width' => @image.image.width,
                  'data-height' => @image.image.height, :alt => @image.name)
        .image-frame
        .icon.loading-small#preview-waiting{:style => 'display: none'}

- content_for :js do
  = javascript_tag do
    :erb
      var image_id = '<%= params[:id] %>';
      var geometry = <%= {width: @image.image.width, height: @image.image.height}.to_json %>;
      var cropped_dimensions = <%= @line_item.try(:cropped_dimensions).to_a %>;
