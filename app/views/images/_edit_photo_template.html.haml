/ local values: image

.edit-template.container.left{ :data => {:id => "#{ image.id }"} }
  .image-container.thumb.no-padding{ :id => "image-container-#{image.id}", :title=>"#{image.name}" }
    = image_tag(image.data.url(:thumb), :class => "image-thumb image thumb")
  .info-panel.left
    .info-line.left
      .label.text.black.bold.font12 Photo Name
      = text_field :image, :name, :value => image.name
    .info-line.left
      .label.text.black.bold.font12 Move to Another Gallery
      = select :image, :gallery_id, gallery_options(current_user, image.gallery_id),
             { :class => 'left' }
    .info-line.left
      / .half.left
      .label.text.black.bold.font12 Price
      = select :image, :price, gallery_price_options
  .info-panel.left
    .info-line.left
      .label.text.black.bold.font12 Description
      = text_area :image, :description, :value => image.description
    .info-line.left
      .label.text.black.bold.font12 Other Actions
      .option.half.left
        %input{ :id => "image_album_cover_#{image.id}", :type => 'checkbox', :name => 'image[is_album_cover]', :class => 'album-cover no-padding left', :checked => image.is_gallery_cover }
        = label_tag "image_album_cover_#{image.id}", 'Use as album cover', :class => 'text gray font11 line16 left', :style => 'padding-left: 3px'
      .option.half.right
        %input{ :id => "user_avatar_#{image.id}", :type => 'checkbox', :name => 'image[is_avatar]', :class => 'user-avatar no-padding left', :checked => image.is_owner_avatar }
        = label_tag "user_avatar_#{image.id}", 'Use as profile picture', :class => 'text gray font11 line16 left', :style => 'padding-left: 3px'

  .info-panel.left
    .info-line.left
      .label.text.black.bold.font12 Key Words
      = text_area :image, :key_words, :value => image.keyword
    .info-line.left
      .button.delete-photo.right{ :data => { :url => "#{ url_for(:controller => 'images', :action => 'destroy', :gallery_id => image.gallery_id, :id => image.id)}" } }

  .clear
  .line-separator
