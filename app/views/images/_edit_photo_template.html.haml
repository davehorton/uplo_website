.edit-template.container.left{ :data => {:id => "#{ image.id }"} }
  .image-container.thumb.no-padding{ :id => "image-container-#{image.id}", :title=>"#{image.name}" }
    = image_tag(image.url(:thumb), :class => "image-thumb image thumb")
  .info-panel.left
    .info-line.left
      .label.text.black.bold.font12 Photo Name
      = text_field :image, :name, :value => image.name, :style => "font-size:12px; margin-top:5px; padding-top:2px; padding-bottom:2px", :disabled => image.data_processing
    .info-line.left
      .label.text.black.bold.font12{:style => "margin-bottom:5px;" } Move to Another Gallery
      = select :image, :gallery_id, gallery_options(current_user, image.gallery_id), { class: "left" }, :disabled => image.data_processing
    - if !image.data_processing
      .info-line.left
        .label.text.black.bold.font12 Pricing
        .inline.left
          .text.gray.font11.line16.left= "Tier #{ image.tier }"
          .price.text.black.underline.font11.line16.left change this
    - else
      .info-line.left
        .inline.left
          %br
          .text.font11.bold.line16.left{:style => "color:red"} Processing...
  .info-panel.left
    .info-line.left
      .label.text.black.bold.font12 Description
      = text_area :image, :description, :value => image.description, :disabled => image.data_processing
    - if !image.data_processing
      .info-line.left
        .label.text.black.bold.font12 Other Actions
        .inline.half.left
          %input{ :id => "image_album_cover_#{image.id}", :type => "checkbox", :name => "image[gallery_cover]", :class => "album-cover no-padding left", :checked => image.gallery_cover? }
          = label_tag "image_album_cover_#{image.id}", "Use as album cover", :class => "text gray font11 line16 left"
        .inline.half.right
          %input{ :id => "user_avatar_#{image.id}", :type => "checkbox", :name => "image[owner_avatar]", :class => "user-avatar no-padding left", :checked => image.owner_avatar }
          = label_tag "user_avatar_#{image.id}", "Use as profile picture", :class => "text gray font11 line16 left"

  .info-panel.left
    .info-line.left
      .label.text.black.bold.font12 Tags
      = text_area :image, :keyword, :value => image.keyword, :disabled => image.data_processing
    .info-line.left{:style => "margin-top:20px"}
      .button.delete-photo.right{ :data => { :url => "#{ url_for(:controller => 'images', :action => 'destroy', :gallery_id => image.gallery_id, :id => image.id)}" } }

  .clear
  .line-separator
