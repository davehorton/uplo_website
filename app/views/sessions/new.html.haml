!!!

%html
  %head
    - title = "UPLO #{yield(:title)} | #{I18n.t("common.site_title")}"
    %title= title
    %meta{ :charset => "utf-8" }
    %meta{:name => "title", :content => title}
    
    %link(href="#{path_to_image('/favicon.ico')}" type="image/x-icon" rel="shortcut icon")/
    %link(href="#{path_to_image('/favicon.ico')}" type="image/x-icon" rel="icon")/
    
    = stylesheet_link_tag "style.css"
    = jquery_include_tag
    = javascript_include_tag("rails.js", "application.js")
    = csrf_meta_tag
    = yield :head

  %body
    #header.round-box
      #logo-wrapper
        %a#logo{:href => "/"}
          = "UPLO"
        #search-box-wrapper
          =# render(:partial => "shared/search_box")
      %nav#menu
        =# render(:partial => "shared/main_menu")

    #wrapper
      #main.clearfix
        - flash_class = (flash.blank? ? "" : "content")
        #flash{:class => flash_class}
          - flash.each do |key, value|
            .box{:class => "box-#{key}"}= value
          
        .content-wrapper.clearfix
          = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
            = f.input :email, :wrapper_class => "input clearfix", :label_html => {:class => "signin"}, :input_html => {:class => 'signin'}, :label => t('public.signin.email'), :required => false
            = f.error :email
            = f.input :password, :wrapper_class => "input clearfix", :label_html => {:class => "signin"}, :input_html => {:class => 'signin'}, :label => t('public.signin.password'), :required => false
            - if devise_mapping.rememberable?
              %p.remember
                = f.check_box :remember_me
                = f.label :remember_me, t('public.signin.remember')
            %p.signin= f.submit "Sign in", :class => "button medium"
          - if devise_mapping.recoverable? && controller_name != 'passwords'
            = link_to "Forgot your password?", new_password_path(resource_name), :class => "icon-info-link"
          
    #footer.round-box
      =# render(:partial => "shared/footer")
