%ul#menu-items
	%li
	  %a.app-btn{:href => "/iphone_app"}
	    %img{:src => "assets/get-app-btn.png"}/

  - if user_signed_in?
    %li
      = link_to "Logout", "/signout", :class => "icon-link icon-logout", :method => "delete"
    %li
      %a{:href => shopping_cart_show_path}
        My Cart
        %span#cart-counter.normal #{total_line_items}
    %li
      = select_tag "private_pages", private_links_options(current_section), :id => "my_links"
    %li.no-padding-right{:style => "margin-top: 2px"}
      = render :partial => "search_box_new", :locals => {:action => '/search'}
  - else
	%li
	  %a.login-btn{:href => "/signin"}
	    %img{:src => "assets/login-btn.png"}/
