%ul
  - if user_signed_in?
    %li#divider-image
      %img{:src => "/assets/divider.jpg", :height => 34}
    %li
      = link_to "Logout", "/signout", :method => "delete" 
    %li
      %a{:href => shopping_cart_show_path}
        My Cart
        %span#cart-counter.normal #{total_line_items}
    %li
      = select_tag "private_pages", private_links_options(current_section), :id => "my_links"
    %li.no-padding-right{:style => "margin-top: 3px"}
      = render :partial => "search_box_new", :locals => {:action => '/search'} 
  - else
    
    %li
      = link_to image_tag('login-btn.png'), signin_path
      
      
      
               
