- content_for :head do
  = stylesheet_link_tag("scss/sale.css", "scss/new_image.css")

- content_for :top_content do
  .text.black.bold.font16.left My Sales
  .line-separator.left

.wrapper
  - if @sales.blank?
    .empty-data= "There is no image to view saled status."
  - else
    .sale-chart.left
      = render :partial => 'chart', :locals => {:total_sales => @year_sales, :sales => @monthly_sales}
    %br
    %br
    %br
    %br
    %br
    %br
    %br
    %br
    .payment-info.right
      .round-box.option.right
        .header.text.black.bold.font12= "Total amount earned"
        .content.text.bold.font14
          = number_to_currency @user.total_earn, {:precision => 2} 
      %br
      .round-box.option.right
        .header.text.black.bold.font12= "Amount owed"
        .content.text.bold.font14
          = number_to_currency @user.owned_amount, {:precision => 2} 
          -if (@user.owned_amount > 0)
            .request_button
              = link_to image_tag( 'btn-request-payout.png'), {:controller => :sales, :action => :withdraw}, :method => :post
    .line-separator.left.clear
    .sales-wrapper.left
      - (0...(@sales.length - 1)). each do |idx|
        - image = @sales[idx]
        - image_sales = image.user_total_sales
        - url = url_for(:controller => "sales", :action => "image_sale_details", :id => "#{image.id}")
        .sale-item.left
          .image-container.thumb.left.no-padding
            = image_tag(image.data.url(:thumb), :class => 'image-thumb image thumb')
          .info.left
            .name.text.black.bold= image.name
            - if (image.is_flagged? || image.is_removed)
              .text.font20{:style => "color:red"} Unavailable
            .price
              %span.text.fuzzy-gray.bold.font18= number_to_currency image_sales, {:precision => 2}
              %span.text.fuzzy-gray.font14 Cumulative
            %a.left{ :href => "#{ url }"}
              .btn-detail
          .line-separator.left

      - image = @sales[@sales.length - 1]
      - image_sales = image.user_total_sales
      - url = url_for(:controller => "sales", :action => "image_sale_details", :id => "#{image.id}")
      .sale-item.left
        .image-container.thumb.left.no-padding
          = image_tag(image.data.url(:thumb), :class => 'image-thumb image thumb')
        .info.left
          .text.black.bold.font22= image.name
          - if (image.is_flagged? || image.is_removed)
            .text.red.font22 Unavailable
          .text.fuzzy-gray.price
            %span.text.bold.fuzzy-gray.font18= number_to_currency image_sales, {:precision => 2}
            %span.text.font14 Cumulative
          %a.left{ :href => "#{ url }"}
            .btn-detail

  .clear= render_pagination(@sales, {:controller => "sales", :action => params[:action]})

