- content_for :head do
  = stylesheet_link_tag("scss/sale.css", "scss/new_image.css")

- content_for :top_content do
  .breadcrum.left{:style => "padding-top:15px;"} My Sales
  .line-separator.clear &nbsp;

.wrapper
  .clearfix
    - if @sales.blank?
      .empty-data= "There is no image to view saled status."
    - else
      - image = @image
      .sale-item.clear
        .image-container.thumb.left.no-padding
          %dl.entry
            %dt.preview
              = image_tag(@image.data.url(:thumb), :class => "image-thumb")
        .info.left
          .saled-name.text.bold= @image.name
          .saled-quantity.text.fuzzy= "#{@image.saled_quantity} Sales"
          .saled-price.text= number_to_currency @image.total_sales, {:precision => 2}
      .line-separator.clear &nbsp;

      .sale-chart.clear
        = render :partial => 'chart', :locals => {:total_sales => @image.total_sales, :sales => @sales}
      .line-separator.clear &nbsp;

      .sale-info
        .header.text.bold Purchased by
        - (0...@purchased_info.length). each do |idx|
          - line_item = @purchased_info[idx]
          - purchaser = User.find_by_id line_item.purchaser_id.to_i
          .user.left.clear= image_tag(purchaser.avatar.url(:small), :class => "image small")
          .left
            %span.text.bold= purchaser.username
            %span.text.fuzzy= "(#{line_item.creation_timestamp} ago)"
            .text.normal
              - plexi_mount = SharedMethods::Converter.Boolean(line_item.plexi_mount)
              %span= plexi_mount ? 'Plexi Mount,&nbsp;'.html_safe : 'No Plexi Mount,&nbsp;'.html_safe
              %span= "#{line_item.size},&nbsp;".html_safe
              %span= "#{line_item.moulding} Mounding,&nbsp;".html_safe
              %span= "Quantity #{line_item.quantity}"
          - if idx < (@purchased_info.length - 1)
            .line-separator.clear &nbsp;
        = render_pagination(@purchased_info, {:controller => "sales", :action => params[:action]})


- content_for :js do
  - javascript_tag do
    :erb
      $('.details').bind('click', function(){
        window.location = $(this).attr('data-url');
      });
