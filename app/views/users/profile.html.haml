.account
  .action-container.clearfix
    .header
      %h1= "My Profile"
    %a.float-right#edit-profile{:href => "/my_account/edit", :class => "ui-button-container icon-link"}
      %span= "Edit Profile"

  .clearfix

  .account-info-container.clearfix
    .info-container
      %span
        %h2= "Full name:"
      %span= @user.fullname

    .info-container
      %span
        %h2= "Gender:"
      %span= @user.gender_string

    .info-container
      %h2= "Social Networks:"
      .info-content
        .info-item
          %label.social= "Twitter:"
          %span= @user.twitter

        .info-item
          %label.social= "Facebook:"
          %span= @user.facebook

    .info-container
      %span
        %h2= "Security:"
      %span
        %a#change-password{:href => "/change_password"}= "Change Password"

    .info-container
      %h2= "Payment & Shipping Options:"
