- address = current_user.billing_address || current_user.build_billing_address
- country = {"USA" => "usa"}
= render :layout => "account_wrapper", :locals => {:header => "My Billing Address"} do
  - if address.new_record?
    .yield_info
      There is no billing address information
  - else
    .yield_info
      .line_info
        = [address.first_name, address.last_name].join(' ')
      .line_info
        = address.street_address
        %br
        = address.optional_address
      .line_info
        = [address.city, address.state].join(', ')
        = address.zip

  .yield_edit.hide
    = simple_form_for current_user, :url => user_path(current_user) , :remote => true, :method => :put do |user|
      .form_wrapper.left
        .line First Name
        .line Last Name
        .line Street Address
        .line
        .line City
        .line State
        .line Zip Code
      = user.simple_fields_for :billing_address, address do |add|
        .form_wrapper.left{:style => "width:200px; margin-left:10px"}
          .line= add.input_field :first_name
          .line= add.input_field :last_name
          .line= add.input_field :street_address
          .line= add.input_field :optional_address
          .line= add.input_field :city
          .line= add.input_field :state
          .line= add.input_field :zip
          .line= hidden_field_tag :type_update, 'billing_address'
          %br
          .update_button.left
          .button.cancel.left