- content_for :head do
  = stylesheet_link_tag('scss/new_image.css')

- content_for :left_content do
  = render :partial => 'user_profile', :locals => { :user => @user }

.profile-wrapper
  #counters.right{:data => {'current-user' => "#{is_current_user(@user.id)}"}}
    = render :partial => 'counters', :locals => { :photos => @images.total_entries,
      :galleries => @galleries.total_entries, :likes => @liked_images.total_entries,
      :followers => @followers.total_entries, :following => @followed_users.total_entries }

  #container.right
    = render :partial => 'main_page'

- content_for :js do
  = javascript_include_tag('file_upload/jquery.fileupload.js', 'file_upload/jquery.iframe-transport.js', 'profiles.js')
