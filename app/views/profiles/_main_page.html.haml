- user_possesive = user_possesive_form @user.id
.main.right
  #photos-section.container.left
    .head
      .text.black.bold.font20.left= "#{user_possesive} Photos"
      .text.fuzzy-gray.font20.left= "&nbsp;(#{ @images.total_entries })".html_safe
      = render :partial => 'link_to_detail', :locals => { :user_id => @user.id, :url => url_for(:controller => 'profiles', :action => 'show_photos', :user_id => @user.id) }
    .images-wrapper.left
      - (0...@images.length). each do |idx|
        - image = @images[idx]
        - additional_class = line_item_additional_class(idx, 6)
        .image-container.thumb.profile{:id => "image-container-#{image.id}", :title=>"#{image.name}", :class => "#{additional_class}"}
          = image_tag(image.data.url(:thumb), :class => "image-thumb profile image thumb")

  #galleries-section.container.left
    .head
      .text.black.bold.font20.left= "#{user_possesive} Galleries"
      .text.fuzzy-gray.font20.left= "&nbsp;(#{ @galleries.total_entries })".html_safe
      = render :partial => 'link_to_detail', :locals => { :user_id => @user.id, :url => url_for(:controller => 'profiles', :action => 'show_galleries', :user_id => @user.id) }
    .images-wrapper.left
      - (0...@galleries.length). each do |idx|
        - gallery = @galleries[idx]
        - additional_class = line_item_additional_class(idx, 6)
        .image-container.thumb.profile{:title=>"#{ gallery.name }", :class => "#{ additional_class }"}
          = image_tag(gallery_cover_image_url(gallery), :class => "image-thumb profile image thumb")

  #liked-photos-section.container.left
    .head
      .text.black.bold.font20.left= "#{user_possesive} Likes"
      .text.fuzzy-gray.font20.left= "&nbsp;(#{ @liked_images.total_entries })".html_safe
      .not-implement
        = render :partial => 'link_to_detail', :locals => { :user_id => @user.id, :url => '#' }
    .images-wrapper.left
      - (0...@liked_images.length). each do |idx|
        - image = @liked_images[idx]
        - additional_class = (idx%6 == 0) ? "no-padding-left" : ((idx%6==5) ? "no-padding-right" : "")
        .image-container.thumb.profile{:id => "image-container-#{image.id}", :title=>"#{image.name}", :class => "#{additional_class}"}
          = image_tag(image.data.url(:thumb), :class => "image-thumb profile image thumb")

  #followers-section.container.left
    .head
      .text.black.bold.font20.left= "#{user_possesive} Followers"
      .text.fuzzy-gray.font20.left= "&nbsp;(#{ @followers.total_entries })".html_safe
      .actions-panel.right
        %a.list.text.black.bold.font10.right{ :data => { 'url' => "#{ url_for(:controller => 'profiles', :action => 'show_followers', :user_id => @user.id) }"} } + VIEW ALL
    .line-separator.left
    .images-wrapper.left
      - (0...@followers.length). each do |idx|
        - user = @followers[idx]
        - additional_class = (idx%3 == 0) ? 'no-padding-left' : ((idx%3==2) ? 'no-padding-right' : '')
        .user-section.left{ :class => "#{ additional_class }" }
          = image_tag(user.avatar_url(:small), :class => "avatar small left")
          .left
            %a.text.black.normal.font12.line10{ :href => "#{ url_for(:controller => 'profiles', :action => 'show', :user_id => user.id) }" }= user.username
            .text.gray.font11.line10= user.fullname

  - following_margin = 'margin-top:15px;' if @followed_users.length > 0
  #following-section.container.left{ :style => "#{ following_margin }" }
    .head
      .text.black.bold.font20.left= following_header_label(@user.id)
      .text.fuzzy-gray.font20.left= "&nbsp;(#{ @followed_users.total_entries })".html_safe
      = render :partial => 'link_to_detail', :locals => { :user_id => @user.id, :url => "#{ url_for(:controller => 'profiles', :action => 'show_followed_users', :user_id => @user.id) }" }
    .line-separator.left
    .images-wrapper.left
      - (0...@followed_users.length). each do |idx|
        - user = @followed_users[idx]
        - additional_class = (idx%3 == 0) ? 'no-padding-left' : ((idx%3==2) ? 'no-padding-right' : '')
        .user-section.left{ :class => "#{ additional_class }" }
          = image_tag(user.avatar_url(:small), :class => "avatar small left")
          .left
            %a.text.black.normal.font12{ :href => "#{ url_for(:controller => 'profiles', :action => 'show', :user_id => user.id) }" }= user.username
            .text.gray.font11.line10= user.fullname
