- content_for :head do
  = javascript_include_tag("lib/jail.min.js")
  = stylesheet_link_tag("scss/new_image.css")

- content_for :top_content do
  .data-header.text.bold.font16.line12.left
    %span.text.black Browse /
    %span.text.gray All Images
  = render :partial => "shared/filter_search_box", :locals => {:action => "filtering_search"}

.wrapper.images-wrapper.left
  - if @images.blank?
    .empty-data= "There is no image. Please add image."
  - else
    = render :partial => 'images/photos_template', :locals => { :images => @images, :photos_per_line => 6, :photo_size => 'thumb', :other_classes => '' }
= render_pagination(@images, {:controller => "home", :action => params[:action]})

:erb
  <script type="text/javascript">
    gallery.setup();
  </script>
