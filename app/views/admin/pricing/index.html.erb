<%= render partial: 'admin/admin_menu' %>

<style type="text/css">
  #actions {
    margin-bottom: 30px;
  }

  #actions a {
    background-color: #ddd;
    border: 1px solid #999;
    padding: 10px;
  }

  #product_options {
    width: 100%
  }
</style>

<div id="actions">
  <%= link_to "Add New Product", new_admin_pricing_path %>
</div>

<table id="product_options">
<thead>
  <tr>
    <th>Tier</th>
    <th>Size</th>
    <th>Moulding</th>
    <th>Price</th>
    <th>Commission</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% Product.all.each do |product| %>
  <tr>
    <td><%= product.tier.name %></td>
    <td><%= product.size.name %></td>
    <td><%= product.moulding.name %></td>
    <td><%= number_to_currency product.price %></td>
    <td><%= number_to_currency product.commission %></td>
    <td><%= edit_admin_pricing_path(product) %></td>
  </tr>
  <% end %>
</tbody>
</table>
