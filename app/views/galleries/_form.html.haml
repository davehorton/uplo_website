.line-separator.clear
.gallery-form-container
  - gallery ||= @gallery
  = simple_form_for(gallery, :html => {:id => 'frm-edit-gallery', :class => "gallery-form"}) do |f|
    .sections.left
      = f.input(:name, :wrapper_class => "input left", :label => 'Gallery Name',
                :input_html => {:class => "name"}, :required => true)
      = f.input(:description, :as => 'text', :wrapper_class => "input left",
                :input_html => {:class => "description"}, :required => false)
    .sections.right
      = f.input(:keyword, :as => 'text', :label => 'Key Words', :wrapper_class => "input right",
                :input_html => {:class => "description"}, :required => false)
      .select_control
        .input.right
          = f.input :permission, :as => :select, :label => "Permission", :collection => gallery_permissions_options, :include_blank => false
          %span.text.gray.italic.font11.left.require_text= "&nbsp;<span style='color:red;'>*</span> Required Field".html_safe
      .clear
      #button-container.left
        #btn-gallery-cancel.button.cancel.left
        #btn-gallery-save.button.save.left

:erb
  <script type="text/javascript">
    $('select').selectmenu({ style: 'dropdown' })
  </script>

