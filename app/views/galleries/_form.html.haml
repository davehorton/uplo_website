.gallery-form-container
  = simple_form_for(gallery, :html => {:class => "gallery-form"}) do |f|
    = f.input(:name, :wrapper_class => "input clearfix", 
              :input_html => {:class => "name"}, :required => true)
    = f.input(:description, :as => "string", :wrapper_class => "input clearfix", 
              :input_html => {:class => "description"}, :required => false)
    = f.input :permission, :as => :select, :label => "Permission", :collection => gallery_permissions_options, :include_blank => false
    = f.submit("Save")
